#!/sbin/sh

case "$1" in 

'update')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/update
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/update
	cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/update
	fedora-search -q isMemberOfCollection:umd\%2A3391 | sweep -a update -s adminint8 > /dev/null 2>&1 &
	;;
'report')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report
        fedora-search -q isMemberOfCollection:umd\%2A3391 | sweep -a report -s adminint8 > /dev/null 2>&1 &
        ;;
'force')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/force
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/force
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/force
        fedora-search -q isMemberOfCollection:umd\%2A3391 | sweep -a force -s adminint8 > /dev/null 2>&1 &
        ;;
'report-final')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report-final
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report-final
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint8/report-final
        fedora-search -q isMemberOfCollection:umd\%2A3391 | sweep -a report-final -s adminint8 > /dev/null 2>&1 &
        ;;
esac
