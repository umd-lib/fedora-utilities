#!/sbin/sh

case "$1" in 

'update')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/update
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/update
	cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/update
	fedora-search -q isMemberOfCollection:umd\%2A11575 | sweep -a update -s adminint5 > /dev/null 2>&1 &
	;;
'report')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report
        fedora-search -q isMemberOfCollection:umd\%2A11575 | sweep -a report -s adminint5 > /dev/null 2>&1 &
        ;;
'force')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/force
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/force
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/force
        fedora-search -q isMemberOfCollection:umd\%2A11575 | sweep -a force -s adminint5 > /dev/null 2>&1 &
        ;;
'report-final')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report-final
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report-final
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint5/report-final
        fedora-search -q isMemberOfCollection:umd\%2A11575 | sweep -a report-final -s adminint5 > /dev/null 2>&1 &
        ;;
esac
