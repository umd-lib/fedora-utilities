#!/sbin/sh

case "$1" in 

'update')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/update
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/update
	cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/update
	fedora-search -q doType:UMD | sweep -a update -s adminint1 > /dev/null 2>&1 &
	;;
'report')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report
        fedora-search -q doType:UMD | sweep -a report -s adminint1 > /dev/null 2>&1 &
        ;;
'force')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/force
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/force
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/force
        fedora-search -q doType:UMD | sweep -a force -s adminint1 > /dev/null 2>&1 &
        ;;
'report-final')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report-final
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report-final
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint1/report-final
        fedora-search -q doType:UMD | sweep -a report-final -s adminint1 > /dev/null 2>&1 &
        ;;
esac
