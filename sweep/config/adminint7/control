#!/sbin/sh

case "$1" in 

'update')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/update
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/update
	cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/update
	fedora-search -q isMemberOfCollection:umd\%2A2 | sweep -a update -s adminint7 > /dev/null 2>&1 &
	;;
'report')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report
        fedora-search -q isMemberOfCollection:umd\%2A2 | sweep -a report -s adminint7 > /dev/null 2>&1 &
        ;;
'force')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/force
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/force
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/force
        fedora-search -q isMemberOfCollection:umd\%2A2 | sweep -a force -s adminint7 > /dev/null 2>&1 &
        ;;
'report-final')
	mkdir -p ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report-final
	cp log4j.conf ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report-final
        cd ${FEDORA_HOME}/server/utilities/sweep/output/adminint7/report-final
        fedora-search -q isMemberOfCollection:umd\%2A2 | sweep -a report-final -s adminint7 > /dev/null 2>&1 &
        ;;
esac
